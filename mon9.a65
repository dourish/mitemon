;;;
;;; Monitor commands
;;;
;;;;;;;;;;;;;

aboutcmd
  lda #<greeting
  sta PRINTVEC
  lda #>greeting
  sta PRINTVEC+1
  jsr printvecstr
  ldy #0
  rts

helpcmd
  lda #<helpstring
  sta PRINTVEC
  lda #>helpstring
  sta PRINTVEC+1
